<h3>
  Diagnosis Code
  <ol class="breadcrumb pull-right">
    <%= render_breadcrumbs tag: :li, separator: '' %>
  </ol>
</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">

          <% if diagnosis_codes.present? %>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Code</th>
                  <th>Clinic</th>
                  <th>Created At</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
              	<% diagnosis_codes.each_with_index do |diagnosis_code, index| %>              		
                  <tr class='diagnosis_code_<%= diagnosis_code.slug %>'>
              			<td><%= index + 1 %></td>
              			<td><%= diagnosis_code.name %></td>
                    <td><%= diagnosis_code.code %></td>
                    <td><%= diagnosis_code.try(:clinic).try(:name) %></td>
              			<td><%= diagnosis_code.display_created_at %></td>
              			<td>
              				<%= link_to "<em class='fa fa-eye'></em> Show".html_safe, diagnosis_code_path(diagnosis_code), class: 'btn btn-default btn-xs', data: {disable_with: 'Please wait...'} %>
                      <%= link_to "<em class='fa fa-pencil'></em> Edit".html_safe, edit_diagnosis_code_path(diagnosis_code), class: 'btn btn-primary btn-xs', data: {disable_with: 'Please wait...'} %>
                      <%= link_to "<em class='fa fa-trash'></em> Delete".html_safe, diagnosis_code_path(diagnosis_code), class: 'btn btn-danger btn-xs', data: {behavior: 'delete', klass: "diagnosis_code_#{diagnosis_code.slug}"} %>
              			</td>
              		</tr>
              	<% end %>
							</tbody>
						</table>
					<% else %>
						No diagnosis code Found.
					<% end %>        	
       	</div>
      </div>
    </div>
  </div>
</div>

