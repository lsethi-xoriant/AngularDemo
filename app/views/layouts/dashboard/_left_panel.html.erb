<aside class="aside">
  <!-- START Sidebar (left)-->
  <div class="aside-inner">
    <nav data-sidebar-anyclick-close="" class="sidebar">
    <!-- START sidebar nav-->
      <ul class="nav">
        <!-- START user info-->
        <li class="has-user-block">
          <div id="user-block" class="collapse">
            <div class="item user-block">
            <!-- User picture-->
              <div class="user-block-picture">
                <div class="user-block-status">
                  <img src="/assets/dashboard/user/02.jpg" alt="Avatar" width="60" height="60" class="img-thumbnail img-circle">
                </div>
              </div>
              
              <!-- Name and Job-->
              <div class="user-block-info">
                <span class="user-block-name">Hello, <%= current_user.fullname %></span>
                <span class="user-block-role">
                  <%= link_to "LOGOUT", destroy_session_path, method: :delete, data: {disable_with: 'Please wait...'} %>
                </span>
              </div>
            </div>
          </div>
        </li>
        <!-- END user info-->
        <!-- Iterates over all sidebar items-->
        <li class="nav-heading ">
          <span data-localize="sidebar.heading.HEADER">Main Navigation</span>
        </li>
            
        <li class="<%= 'active' if controller.action_name == 'dashboard' && controller.controller_name == 'base' %>">
          <%= link_to user_dashboard_path, title: 'Dashboard', data: {disable_with: 'Please Wait...'} do %>
            <em class="icon-speedometer"></em>
            <span data-localize="sidebar.nav.DASHBOARD">Dashboard</span>            
          <% end %>
        </li>

        <li class="<%= 'active' if controller.controller_name == 'clinics' %>">
          <%= link_to '#clinic', title: 'Clinics', data: {toggle: 'collapse'}, class: 'collapsed' do %>
            <em class="fa fa-hospital-o"></em>
            <span>Clinics</span>            
          <% end %>
          <ul id="clinic" class="nav sidebar-subnav collapse <%= 'in' if controller.controller_name == 'clinics' %>">
            <li class="sidebar-subnav-header">Clinics</li>
            <li class="<%= 'active' if controller.controller_name == 'clinics' && (controller.action_name == 'index' || controller.action_name == 'edit')%>">
              <%= link_to clinics_path, title: 'Horizontal', data: {disable_with: 'Please Wait...'} do %>
                <span>Manage Clinics</span>
              <% end %>
            </li>
            <li class="<%= 'active' if controller.controller_name == 'clinics' && controller.action_name == 'new' %>">
              <%= link_to new_clinic_path, title: 'Horizontal', data: {disable_with: 'Please Wait...'} do %> 
                <span>Add Clinic</span>
              <% end %>
            </li>
          </ul>
        </li>

        <li class="<%= 'active' if controller.controller_name == 'patients' %>">
          <%= link_to '#patient', title: 'Patients', data: {toggle: 'collapse'}, class: 'collapsed' do %>
            <em class="fa fa-user"></em>
            <span>Patients</span>            
          <% end %>
          <ul id="patient" class="nav sidebar-subnav collapse">
            <li class="sidebar-subnav-header">Patient</li>
            <% if current_account.clinics.present? %>            
              <li class="<%= 'active' if controller.controller_name == 'patients' %>">
                <%= link_to clinic_patients_path(current_account.try(:clinics).try(:latest).try(:first)), title: 'Horizontal', data: {disable_with: 'Please Wait...'} do %>
                  <span>Manage Patients</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>


        <li class="nav-heading ">
          <span data-localize="sidebar.heading.HEADER">Settings</span>
        </li>

        <li class="<%= 'active' if controller.controller_name == 'providers' %>">
          <%= link_to '#provider', title: 'Providers', data: {toggle: 'collapse'}, class: 'collapsed' do %>
            <em class="icon-grid"></em>
            <span>Providers</span>            
          <% end %>
          <ul id="provider" class="nav sidebar-subnav collapse <%= 'in' if controller.controller_name == 'providers' %>">
            <li class="sidebar-subnav-header">Providers</li>
            <li class="<%= 'active' if controller.controller_name == 'providers' && (controller.action_name == 'index' || controller.action_name == 'edit' || controller.action_name == 'show')%>">
              <%= link_to providers_path, title: 'Horizontal', data: {disable_with: 'Please Wait...'} do %>
                <span>Manage Providers</span>
              <% end %>
            </li>
            <li class="<%= 'active' if controller.controller_name == 'providers' && controller.action_name == 'new' %>">
              <%= link_to new_provider_path, title: 'Horizontal', data: {disable_with: 'Please Wait...'} do %> 
                <span>Add Provider</span>
              <% end %>
            </li>
          </ul>
        </li>


      </ul>
      <!-- END sidebar nav-->
    </nav>
  </div>
  <!-- END Sidebar (left)-->
</aside>