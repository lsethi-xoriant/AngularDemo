<h3>
  Letters
  <ol class="breadcrumb pull-right">
    <%= render_breadcrumbs tag: :li, separator: '' %>
  </ol>
</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">

          <% if letters.present? %>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Last Modify Date</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
              	<% letters.each_with_index do |letter, index| %>              		
                  <tr class='letter_<%= letter.slug %>'>
              			<td><%= index + 1 %></td>
              			<td><%= letter.name %></td>              			
              			<td><%= letter.display_created_at %></td>
              			<td>
              				<%= link_to "<em class='fa fa-eye'></em> Show".html_safe, letter_path(letter), class: 'btn btn-default btn-xs', data: {disable_with: 'Please wait...'} %>
                      <%= link_to "<em class='fa fa-pencil'></em> Edit".html_safe, edit_letter_path(letter), class: 'btn btn-primary btn-xs', data: {disable_with: 'Please wait...'} %>
                      <%= link_to "<em class='fa fa-trash'></em> Delete".html_safe, letter_path(letter), class: 'btn btn-danger btn-xs', data: {behavior: 'delete', klass: "letter_#{letter.slug}"} %>
              			</td>
              		</tr>
              	<% end %>
							</tbody>
						</table>
					<% else %>
						No Letter Found.
					<% end %>        	
       	</div>
      </div>
    </div>
  </div>
</div>

