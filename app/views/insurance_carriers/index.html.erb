<h3>
  Insurance Carrier
  <ol class="breadcrumb pull-right">
    <%= render_breadcrumbs tag: :li, separator: '' %>
  </ol>
  <small>
    Insurance carriers associated with patient cases are stored here. To switch between carriers use the "Go to:" drop down in top-menu. You can print envelopes or labels as well as generate a collections report by clicking on the reports button.
  </small>
</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">

          <% if insurance_carriers.present? %>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Carrier Name</th>
                  <th>Created At</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
              	<% insurance_carriers.each_with_index do |insurance_carrier, index| %>              		
                  <tr class='insurance_carrier_<%= insurance_carrier.slug %>'>
              			<td><%= index + 1 %></td>
              			<td><%= insurance_carrier.name %></td>              			
              			<td><%= insurance_carrier.created_at.strftime('%a, %d %b %Y - %H:%M %p') %></td>
              			<td>
              				<%= link_to "<em class='fa fa-eye'></em> Show".html_safe, insurance_carrier_path(insurance_carrier), class: 'btn btn-default btn-xs', data: {disable_with: 'Please wait...'} %>
                      <%= link_to "<em class='fa fa-pencil'></em> Edit".html_safe, edit_insurance_carrier_path(insurance_carrier), class: 'btn btn-primary btn-xs', data: {disable_with: 'Please wait...'} %>
                      <%= link_to "<em class='fa fa-trash'></em> Delete".html_safe, insurance_carrier_path(insurance_carrier), class: 'btn btn-danger btn-xs', data: {behavior: 'delete', klass: "insurance_carrier_#{insurance_carrier.slug}"} %>
              			</td>
              		</tr>
              	<% end %>
							</tbody>
						</table>
					<% else %>
						No Insurance Carrier Found.
					<% end %>        	
       	</div>
      </div>
    </div>
  </div>
</div>

