<h3> Rooms
  <ol class="breadcrumb pull-right">
    <%= render_breadcrumbs tag: :li, separator: '' %>
  </ol>
  <small></small>
</h3>
<div class="row">
  <div class="col-lg-12 text-right">                             	
    <%= link_to "<em class='fa fa-plus'></em> Add Room".html_safe, new_room_path, class: 'btn btn-info btn-xs mrg0005', data: {disable_with: 'Please wait...'} %>
  </div>
  <div class="clearfix"></div> 

	<div class="panel-body col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        
        <div class="table-responsive">
          <% if @rooms.present? %>
            <table class="table table-hover">
              <thead>
                <tr>                  
                  <th>#</th>
                  <th>Name</th>
                  <th>First Appointment Time</th>
                  <th>Last Appointment Time</th>
                  <th>Appointments Interval</th>
                  <th>Appointment Length</th>
                  <th>Created At</th>
                  <th>Action</th>
                </tr>
              </thead>

              <tbody>
              	<% @rooms.each_with_index do |room, index| %>
              		<tr class="room_<%= room.id %>">
              			<td><%= index + 1 %></td>
              			<td><%= room.try(:name) %></td>
              			<td><%= room.try(:first_appointment)%></td>
              			<td><%= room.try(:last_appointment)%></td>
              			<td><%= room.minute_units %></td>
              			<td><%= room.duration_units %></td>
              			<td><%= room.created_at.strftime('%d/%m/%Y %H:%M %p') %></td>
              			<td>
                      <%= link_to "<em class='fa fa-pencil'></em> Edit".html_safe, edit_room_path(room), class: 'btn btn-primary btn-xs', data: {disable_with: 'Please wait...'} %>
                      <%= link_to "<em class='fa fa-trash'></em> Delete".html_safe, room_path(room), class: 'btn btn-danger btn-xs', data: {behavior: 'delete', klass: "room_#{room.id}"} %>
              			</td>
              		</tr>
              	<% end %>
              </tbody>
            </table>
          <% else %>
          	No Room Present Yet.
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>