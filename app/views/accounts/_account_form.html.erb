<%= form_for current_account, html: {class: 'form-horizontal', id: 'validate_current_account'}, data: {'parsley-validate': ''}, novalidate: '' do |form| %>
  <legend>Change Account Settings</legend>
  <div class="form-group">
    <label class="col-lg-2 control-label">Name</label>
    <div class="col-lg-6">
      <%= form.text_field :name, placeholder: 'Account Name', class: 'form-control' %>
    </div>
  </div>

  <div class="clearfix"></div>
  <hr>
  
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">          
      <%= form.submit 'Save', class: 'btn btn-primary', data: {disable_with: 'Please Wait...' } %>
    </div>
  </div>

<% end %>
